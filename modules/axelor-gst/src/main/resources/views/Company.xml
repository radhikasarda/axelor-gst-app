<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="company-grid" title="Company" model="com.axelor.axelor.gst.db.Company">
		<field name="name" />
		<field name="GSTIN" />
		<field name="address" />
	</grid>
	<form name="company-form" title="Company" model="com.axelor.axelor.gst.db.Company">
		<panel title="Company" css="panel-blue">
			<panel colSpan="4">
				<field name="logo" showTitle="false" colSpan="12" widget="image" />
			</panel>
			<panel colSpan="8">
				<field name="name" />
				<field name="GSTIN" />
				<field name="address" />
			</panel>
			<panel-related field="contactList" title="Contact Details" colSpan="12"/>
			<panel-related field="bankDetailsList" title="Bank Details" colSpan="12"/>
		</panel>
	</form>
</object-views>