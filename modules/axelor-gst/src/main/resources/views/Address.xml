<?xml version="1.0" encoding="UTF-8"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
  
  <grid name="address-grid" title="Address"
		model="com.axelor.axelor.gst.db.Address">
		<field name="type" />
		<field name="line1" />
		<field name="line2" />
		<field name="city" />
		<field name="state" />
		<field name="country" />
		<field name="pincode" />
		

	</grid>
	<form name="address-form" title="Address"
		model="com.axelor.axelor.gst.db.Address">
		<panel title="Address" css="panel-green">
		<field name="type"  selection="address.type.selection"/>
		<field name="line1" />
		<field name="line2" />
		<field name="city" />
		<field name="state" />
		<field name="country" />
		<field name="pincode" />
	
		</panel>
	</form>
	<selection name="address.type.selection">
		<option value="default">Default</option>
		<option value="invoice">Invoice</option>
		<option value="shipping">Shipping</option>
		<option value="others">Others</option>
	</selection>
</object-views>